<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:ActorGUI.ViewModels">

    <DataTemplate DataType="{x:Type viewModels:ActPathSelectionPageViewModel}">
        <Grid
            Margin="10"
            VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock
                HorizontalAlignment="Left"
                Grid.Row="1"
                Margin="5"
                FontSize="20"
                Text="{Binding SelectionHelpText}" />
            <TextBox
                Grid.Row="2"
                Margin="5"
                HorizontalAlignment="Stretch"
                FontSize="22"
                Text="{Binding ActPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}" />
            <Button
                Grid.Row="3"
                Margin="5"
                HorizontalAlignment="Right"
                Command="{Binding SavePathCommand}"
                Content="{Binding SavePathText}"
                FontSize="16" />
        </Grid>
    </DataTemplate>

</ResourceDictionary>