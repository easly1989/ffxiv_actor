<mah:MetroWindow
    x:Class="ActorWizard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Actor.UI.Common.Converters;assembly=Actor.UI.Common"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={converters:RatioConverter}, ConverterParameter='0.5'}"
    Height="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight}, Converter={converters:RatioConverter}, ConverterParameter='0.5'}"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    ShowTitleBar="False">

    <mah:TransitioningContentControl Content="{Binding}" Transition="Up"/>
</mah:MetroWindow>
